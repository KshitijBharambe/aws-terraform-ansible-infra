# Virtual Host Configuration for NGINX
# Generated by Ansible for {{ ansible_hostname }}
# Domain: {{ site_domain | default(ansible_hostname) }}
# Environment: {{ ansible_environment }}

server {
    listen 80;
    listen [::]:80;
    server_name {{ site_domain | default(ansible_hostname) }} www.{{ site_domain | default(ansible_hostname) }};
    root {{ nginx_document_root | default('/var/www/html') }};
    index {{ nginx_index_files | default('index.html index.htm index.php') }};

    # Access and error logs
    access_log /var/log/nginx/{{ site_domain | default(ansible_hostname) }}_access.log;
    error_log /var/log/nginx/{{ site_domain | default(ansible_hostname) }}_error.log;

    # Security
    allow {{ nginx_allowed_ips | default('all') }};
    deny all;

    # Main location block
    location / {
        # First attempt to serve request as file, then as directory,
        # then fall back to index.html
        try_files $uri $uri/ {{ nginx_index_files | default('index.html index.htm index.php') }};
    }

    # PHP processing (if enabled)
    {% if nginx_enable_php | default(false) %}
    location ~ \.php$ {
        fastcgi_pass unix:/var/run/php-fpm/php-fpm.sock;
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
    }
    {% endif %}

    # Static file caching
    location ~* \.(jpg|jpeg|gif|png|css|js|ico|svg)$ {
        expires {{ nginx_static_cache_time | default('1y') }};
        add_header Cache-Control "public, immutable";
        access_log off;
    }

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # Health check endpoint
    location = /health {
        access_log off;
        return 200 "healthy\n";
        add_header Content-Type text/plain;
    }

    # Hidden files protection
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }

    # Backup and maintenance pages
    error_page 500 502 503 504 /50x.html;
    error_page 404 /404.html;
}

# SSL Configuration (if enabled)
{% if nginx_enable_ssl | default(false) %}
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name {{ site_domain | default(ansible_hostname) }} www.{{ site_domain | default(ansible_hostname) }};
    root {{ nginx_document_root | default('/var/www/html') }};
    index {{ nginx_index_files | default('index.html index.htm index.php') }};

    # SSL Configuration
    ssl_certificate {{ nginx_ssl_certificate | default('/etc/ssl/certs/nginx.crt') }};
    ssl_certificate_key {{ nginx_ssl_certificate_key | default('/etc/ssl/private/nginx.key') }};
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES128-SHA256:ECDHE-RSA-AES256-SHA384;
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    # HSTS
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

    # Redirect HTTP to HTTPS
    if ($scheme != "https") {
        return 301 https://$host$request_uri;
    }

    # Include same location blocks as HTTP
    location / {
        try_files $uri $uri/ {{ nginx_index_files | default('index.html index.htm index.php') }};
    }

    {% if nginx_enable_php | default(false) %}
    location ~ \.php$ {
        fastcgi_pass unix:/var/run/php-fpm/php-fpm.sock;
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
    }
    {% endif %}
}
{% endif %}
