<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ site_title | default('Infrastructure Demo') }}</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            color: #333;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        .container {
            background: white;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            margin: 20px 0;
        }
        .header {
            text-align: center;
            margin-bottom: 40px;
            padding-bottom: 20px;
            border-bottom: 2px solid #667eea;
        }
        .header h1 {
            color: #667eea;
            font-size: 2.5em;
            margin: 0;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
        }
        .header p {
            color: #666;
            font-size: 1.1em;
            margin: 10px 0 0 0;
        }
        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin: 30px 0;
        }
        .info-card {
            background: #f8f9fa;
            padding: 25px;
            border-radius: 8px;
            border-left: 4px solid #667eea;
            box-shadow: 0 4px 6px rgba(0,0,0,0.05);
            transition: transform 0.3s ease;
        }
        .info-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(0,0,0,0.1);
        }
        .info-card h3 {
            color: #667eea;
            margin-top: 0;
            margin-bottom: 15px;
            font-size: 1.3em;
        }
        .status {
            display: inline-block;
            padding: 8px 16px;
            border-radius: 20px;
            font-weight: bold;
            font-size: 0.9em;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        .status.running {
            background: #28a745;
            color: white;
        }
        .status.stopped {
            background: #dc3545;
            color: white;
        }
        .status.warning {
            background: #ffc107;
            color: #333;
        }
        .metrics {
            background: #e9ecef;
            padding: 20px;
            border-radius: 8px;
            margin: 20px 0;
        }
        .metrics h3 {
            color: #495057;
            margin-top: 0;
            margin-bottom: 15px;
        }
        .metric-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 0;
            border-bottom: 1px solid #dee2e6;
        }
        .metric-item:last-child {
            border-bottom: none;
        }
        .metric-label {
            font-weight: 600;
            color: #495057;
        }
        .metric-value {
            color: #28a745;
            font-weight: bold;
            font-family: 'Courier New', monospace;
        }
        .footer {
            text-align: center;
            margin-top: 40px;
            padding-top: 20px;
            border-top: 1px solid #e9ecef;
            color: #6c757d;
        }
        .refresh-btn {
            background: #667eea;
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 6px;
            cursor: pointer;
            font-size: 1em;
            margin: 10px;
            transition: background 0.3s ease;
        }
        .refresh-btn:hover {
            background: #5a6fd8;
        }
        @media (max-width: 768px) {
            .container {
                padding: 20px;
            }
            .info-grid {
                grid-template-columns: 1fr;
                gap: 15px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>{{ site_title | default('Infrastructure Demo') }}</h1>
            <p>{{ site_description | default('Deployed with Terraform and Ansible') }}</p>
        </div>

        <div class="info-grid">
            <div class="info-card">
                <h3>üåê Server Information</h3>
                <div class="metric-item">
                    <span class="metric-label">Hostname:</span>
                    <span class="metric-value">{{ ansible_hostname }}</span>
                </div>
                <div class="metric-item">
                    <span class="metric-label">Environment:</span>
                    <span class="metric-value">{{ ansible_environment | upper }}</span>
                </div>
                <div class="metric-item">
                    <span class="metric-label">Web Server:</span>
                    <span class="metric-value">{{ webserver_type | upper }}</span>
                </div>
                <div class="metric-item">
                    <span class="metric-label">Domain:</span>
                    <span class="metric-value">{{ site_domain | default(ansible_hostname) }}</span>
                </div>
            </div>

            <div class="info-card">
                <h3>‚ö° Performance Status</h3>
                <div class="metric-item">
                    <span class="metric-label">Service Status:</span>
                    <span class="status running">ONLINE</span>
                </div>
                <div class="metric-item">
                    <span class="metric-label">Response Time:</span>
                    <span class="metric-value">< 100ms</span>
                </div>
                <div class="metric-item">
                    <span class="metric-label">Uptime:</span>
                    <span class="metric-value">{{ server_uptime | default('Unknown') }}</span>
                </div>
                <div class="metric-item">
                    <span class="metric-label">Load Average:</span>
                    <span class="metric-value">{{ load_average | default('0.5') }}</span>
                </div>
            </div>

            <div class="info-card">
                <h3>üîí Security Status</h3>
                <div class="metric-item">
                    <span class="metric-label">SSL Status:</span>
                    <span class="status {% if ssl_enabled %}running{% else %}warning{% endif %}">
                        {% if ssl_enabled %}SECURE{% else %}INSECURE{% endif %}
                    </span>
                </div>
                <div class="metric-item">
                    <span class="metric-label">Security Headers:</span>
                    <span class="status running">ACTIVE</span>
                </div>
                <div class="metric-item">
                    <span class="metric-label">Firewall:</span>
                    <span class="status running">ENABLED</span>
                </div>
                <div class="metric-item">
                    <span class="metric-label">Last Security Scan:</span>
                    <span class="metric-value">{{ last_security_scan | default('Never') }}</span>
                </div>
            </div>

            <div class="info-card">
                <h3>üìä Resource Usage</h3>
                <div class="metric-item">
                    <span class="metric-label">CPU Usage:</span>
                    <span class="metric-value">{{ cpu_usage | default('15') }}%</span>
                </div>
                <div class="metric-item">
                    <span class="metric-label">Memory Usage:</span>
                    <span class="metric-value">{{ memory_usage | default('45') }}%</span>
                </div>
                <div class="metric-item">
                    <span class="metric-label">Disk Usage:</span>
                    <span class="metric-value">{{ disk_usage | default('30') }}%</span>
                </div>
                <div class="metric-item">
                    <span class="metric-label">Network I/O:</span>
                    <span class="metric-value">{{ network_io | default('Low') }}</span>
                </div>
            </div>
        </div>

        <div class="metrics">
            <h3>üìà Live Metrics</h3>
            <p>Last updated: {{ ansible_date_time }}</p>
            <div id="live-metrics">
                <div class="metric-item">
                    <span class="metric-label">Current Connections:</span>
                    <span class="metric-value" id="current-connections">Loading...</span>
                </div>
                <div class="metric-item">
                    <span class="metric-label">Requests/Second:</span>
                    <span class="metric-value" id="requests-per-second">Loading...</span>
                </div>
                <div class="metric-item">
                    <span class="metric-label">Active Processes:</span>
                    <span class="metric-value" id="active-processes">Loading...</span>
                </div>
                <div class="metric-item">
                    <span class="metric-label">Cache Hit Rate:</span>
                    <span class="metric-value" id="cache-hit-rate">Loading...</span>
                </div>
            </div>
        </div>

        <div class="info-grid">
            <div class="info-card">
                <h3>üîß Configuration</h3>
                <div class="metric-item">
                    <span class="metric-label">Config Version:</span>
                    <span class="metric-value">{{ config_version | default('1.0.0') }}</span>
                </div>
                <div class="metric-item">
                    <span class="metric-label">Last Updated:</span>
                    <span class="metric-value">{{ last_config_update | default(ansible_date_time) }}</span>
                </div>
                <div class="metric-item">
                    <span class="metric-label">Ansible Version:</span>
                    <span class="metric-value">{{ ansible_version | default('Unknown') }}</span>
                </div>
                <div class="metric-item">
                    <span class="metric-label">Deployment Method:</span>
                    <span class="metric-value">{{ deployment_method | default('Terraform') }}</span>
                </div>
            </div>

            <div class="info-card">
                <h3>üìû Support Information</h3>
                <div class="metric-item">
                    <span class="metric-label">Contact:</span>
                    <span class="metric-value">{{ support_contact | default('admin@company.com') }}</span>
                </div>
                <div class="metric-item">
                    <span class="metric-label">Documentation:</span>
                    <span class="metric-value"><a href="{{ docs_url | default('/docs') }}" target="_blank">Available</a></span>
                </div>
                <div class="metric-item">
                    <span class="metric-label">Status Page:</span>
                    <span class="metric-value"><a href="{{ status_page_url | default('/status') }}" target="_blank">status.company.com</a></span>
                </div>
            </div>
        </div>

        <div class="footer">
            <p>Generated by Ansible on {{ ansible_date_time }}</p>
            <p>Infrastructure managed by <strong>{{ managing_team | default('DevOps Team') }}</strong></p>
            <button class="refresh-btn" onclick="location.reload()">Refresh Data</button>
        </div>
    </div>

    <script>
        // Auto-refresh metrics every 30 seconds
        setInterval(() => {
            updateLiveMetrics();
        }, 30000);

        function updateLiveMetrics() {
            // Simulate live metrics update
            document.getElementById('current-connections').textContent = 
                Math.floor(Math.random() * 100) + 50;
            document.getElementById('requests-per-second').textContent = 
                (Math.random() * 50 + 10).toFixed(1);
            document.getElementById('active-processes').textContent = 
                Math.floor(Math.random() * 20) + 5;
            document.getElementById('cache-hit-rate').textContent = 
                (Math.random() * 30 + 70).toFixed(1) + '%';
        }

        // Add real-time timestamp
        function updateTimestamp() {
            const now = new Date();
            const timestamp = now.toLocaleString();
            const elements = document.querySelectorAll('.metric-value');
            // Update page timestamp periodically
            console.log('Page updated at:', timestamp);
        }

        setInterval(updateTimestamp, 60000); // Update every minute
    </script>
</body>
</html>
